@using OI.MVC.Helpers
@model OI.Entities.Models.Account

@{    
    ViewBag.Title = "User Management";
}


<div class="page-title">
    <h3>User Management</h3>
    <div class="page-breadcrumb">
        <ol class="breadcrumb">
            @if(Model.Id == 0)
            {
                <li class="active">Add a New User</li>
            } else {
                <li class="active">Edit a User</li>
            }
        </ol>
    </div>
</div>

<div id="main-wrapper">
    <div class="row">        
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        @using (Ajax.BeginForm("UserEdit", "User",
                            new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "formPlaceholder" }, new { @id = "userForm", @class = "form-horizontal form-bordered" }))
                        {
                            <div class="form-group">
                                <label class="col-md-1 control-label">Employee</label>
                                <div class="col-md-2">
                                    @Html.DropDownList("EmployeeId", null, null, new { @class = "form-control", @id = "employee" })                                
                                </div>
                            </div>                            
                            
                            <div class="form-group">
                                <label class="col-md-1 control-label">Username</label>
                                <div class="col-md-2">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-1 control-label">Password</label>
                                <div class="col-md-2">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "label label-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-1 control-label">Access Type</label>
                                <div class="col-md-2">
                                    @Html.DropDownList("RoleId", null, null, new { @class = "form-control", @id = "role" })                                
                                </div>
                            </div>
                            
                            
                            @Html.HiddenFor(m => m.Id)
                            
                        }

                        <div class="form-group">    
                            
                            <div class="col-md-2">                                
                                <button type="submit" class="btn btn-primary" data-loading-text="Saving changes..." onclick="$('#userForm').submit();" id="btnSave">Save changes</button>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>